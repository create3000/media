var
	firstTime  = 0,
	pointIndex = -1,
	hitPoint   = new SFVec2f (),
	offset     = new SFVec2f ();

function initialize ()
{
	xInterpolator .key      = new MFFloat (0, 0.375, 0.75, 1);
	xInterpolator .keyValue = new MFFloat (-20, -5, 10, 20);
	yInterpolator .keyValue = new MFFloat (-10, 5, -5, 10);
