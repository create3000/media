function set_touchTime (value, time)
{
	if (value - firstTime > doubleClickInterval)
	{
		firstTime = value;
		return;
	}

	doubleClickTime = time;

	if (pointIndex < 0 || pointIndex >= xInterpolator .keyValue .length)
		addPoint ();

	else
